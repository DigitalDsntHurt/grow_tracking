<p id="notice"><%= notice %></p>

<h1>Plant Groups</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Nickname</th>
      <th>CloneDate</th>
      <th>CurrentRoom</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plant_groups.each do |plant_group| %>
      <tr>
        <td><%= plant_group.quantity %></td>
        <td><%= plant_group.nickname %></td>
        <td><%= plant_group.clone_date %></td>
        <td><%= @rooms.where(id: plant_group.current_room_id)[0].name %></td>
        <td><%= plant_group.notes %></td>
        <td><%= link_to 'Show', plant_group %></td>
        <td><%= link_to 'Edit', edit_plant_group_path(plant_group) %></td>
        <td><%= link_to 'Destroy', plant_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

